{% block body %}

    <table border="1">
        <tr>
            <td>id</td>
            <td>num_c</td>
            <td>date_c</td>
            <td>payement</td>
        </tr>
        {% for commande in commande %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.getNumC }}</td>
                <td>{{ commande.getDateC()|date('d M Y')}}</td>
                <td>{{ commande.getPayement }}</td>
                <td> <a href="{{ path('supprimerCommande', {'id': 'x'}) }}">Delete</a> </td>
                <td> <a href="{{ path('modifierCommande', {'id': 'x'}) }}">Update</a></td>


            </tr>
        {% endfor %}
    </table>
    <a href="{{ path('ajouterCommande') }}">ajouter une commande</a>
{% endblock %}