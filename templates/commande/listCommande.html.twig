{% block titrePage %}
    <div class="col-sm-6">
        <h1 class="m-0"> Afficher les commandes</h1>
    </div><!-- /.col -->
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
